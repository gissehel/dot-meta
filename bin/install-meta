[ -d ~/.dotfiles ] || git clone https://github.com/gissehel/dotfiler ~/.dotfiles
function instal_or_rename_repo {
    REPO="$1"
    DIR="$2"
    if [ -d "${DIR}" ]; then
        cd "${DIR}"
        git remote set-url origin "${REPO}"
        git pull
    else
        git clone "${REPO}" "${DIR}"
    fi
}
instal_or_rename_repo git@github.com:gissehel/dot-gissehel.git ~/.dotfiles/dot-gissehel
instal_or_rename_repo git@github.com:gissehel/dot-meta.git ~/.dotfiles/dot-meta
~/.dotfiles/bin/dot update

